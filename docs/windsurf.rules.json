        "rules": [
          "Maximum 1 primary button per view section",
          "Always include focus states with 3px outline",
          "Minimum height: 44px for md size (touch-friendly)",
          "Use sentence case for button text",
          "Disabled buttons: opacity 0.6, cursor not-allowed"
        ]
      },
      "forms": {
        "inputs": {
          "heights": ["sm: 36px", "md: 44px", "lg: 52px"],
          "rules": [
            "Labels required above inputs",
            "Show validation inline on blur",
            "Use aria-describedby for help text",
            "Error states: red border + error message below",
            "Focus states: border color + ring"
          ]
        }
      },
      "cards": {
        "rules": [
          "Default elevation: shadow-sm",
          "Hover elevation: shadow-lg with translateY(-4px)",
          "Border radius: 12px for standard cards",
          "Padding: 24px for content cards",
          "Transition: all 0.3s ease"
        ]
      }
    },
    "layout": {
      "container": {
        "maxWidth": "1440px",
        "padding": ["mobile: 16px", "tablet: 24px", "desktop: 48px"]
      },
      "grid": {
        "columns": 12,
        "gap": ["mobile: 16px", "tablet: 24px", "desktop: 24px"]
      }
    },
    "responsive": {
      "breakpoints": {
        "xs": "0px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "approach": "Mobile first",
      "rules": [
        "Design for mobile, enhance for larger screens",
        "Touch targets minimum 44x44px on mobile",
        "Test on actual devices, not just browser resize",
        "Simplify navigation for mobile"
      ]
    }
  },

  "motionRules": {
    "referenceFile": "motion.rules.json",
    "durations": {
      "instant": "50ms",
      "fast": "150ms",
      "base": "250ms",
      "moderate": "350ms",
      "slow": "500ms"
    },
    "easings": {
      "default": "ease-out",
      "enter": "ease-out",
      "exit": "ease-in",
      "move": "ease-in-out"
    },
    "rules": [
      "Only animate transform and opacity for performance",
      "Never animate width, height, top, left directly",
      "Respect prefers-reduced-motion",
      "Maximum animation duration: 500ms for functional, 2s for decorative",
      "Use hardware acceleration (transform: translateZ(0)) sparingly",
      "Always provide fallback for users with motion sensitivity"
    ],
    "commonPatterns": {
      "fadeIn": "opacity: 0 -> 1, duration: 250ms, easing: ease-out",
      "slideInUp": "translateY(20px) + opacity(0) -> translateY(0) + opacity(1), duration: 300ms",
      "scaleIn": "scale(0.95) + opacity(0) -> scale(1) + opacity(1), duration: 200ms",
      "pulse": "scale(1) -> scale(1.05) -> scale(1), duration: 600ms"
    }
  },

