  "description": "Comprehensive development rules for Windsurf AI to build and maintain the Intact Ghana e-commerce platform",
  
  "corePrinciples": {
    "codeQuality": [
      "Write clean, self-documenting code",
      "Follow DRY (Don't Repeat Yourself) principle",
      "Maintain single responsibility for functions and components",
      "Prefer composition over inheritance",
      "Keep functions small and focused (max 50 lines)",
      "Use meaningful variable and function names",
      "Add comments only when code intent isn't obvious"
    ],
    "performance": [
      "Optimize for Core Web Vitals (LCP < 2.5s, FID < 100ms, CLS < 0.1)",
      "Lazy load images and components below the fold",
      "Use code splitting for route-based chunks",
      "Implement proper caching strategies",
      "Minimize bundle size (initial < 200KB)",
      "Use memoization for expensive computations",
      "Debounce user inputs and API calls"
    ],
    "accessibility": [
      "Maintain WCAG 2.1 AA compliance minimum",
      "Ensure keyboard navigation for all interactive elements",
      "Provide ARIA labels for screen readers",
      "Maintain 4.5:1 contrast ratio for text",
      "Include focus indicators on all interactive elements",
      "Support prefers-reduced-motion",
      "Provide alternative text for all images"
    ],
    "security": [
      "Never commit secrets or API keys",
      "Validate and sanitize all user inputs",
      "Use parameterized queries to prevent SQL injection",
      "Implement CSRF protection",
      "Use HTTPS everywhere",
      "Follow principle of least privilege",
      "Regularly update dependencies"
    ]
  },

  "designSystem": {
    "referenceFile": "design-system.md",
