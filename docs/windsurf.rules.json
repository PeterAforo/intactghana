  "apiConventions": {
    "referenceFile": "api.conventions.md",
    "urlStructure": {
      "base": "https://api.intactghana.com/v1",
      "format": "/resources/:id/sub-resources",
      "rules": [
        "Use plural nouns for collections",
        "Use lowercase with hyphens",
        "Keep URLs shallow (max 3 levels)",
        "No verbs in URLs (use HTTP methods)"
      ]
    },
    "httpMethods": {
      "GET": "Retrieve resource(s)",
      "POST": "Create new resource",
      "PUT": "Update/Replace resource",
      "PATCH": "Partial update",
      "DELETE": "Remove resource"
    },
    "responseFormat": {
      "success": {
        "structure": {
          "success": true,
          "data": "{}",
          "meta": "{ timestamp, requestId }"
        }
      },
      "error": {
        "structure": {
          "success": false,
          "error": "{ code, message, statusCode, details }",
          "meta": "{ timestamp, requestId }"
        }
      },
      "pagination": {
        "structure": {
          "success": true,
          "data": "[]",
          "pagination": "{ page, limit, total, totalPages, hasNext, hasPrev }",
          "meta": "{}"
        }
      }
    },
    "statusCodes": {
      "200": "OK - Successful GET, PUT, PATCH",
      "201": "Created - Successful POST",
      "204": "No Content - Successful DELETE",
      "400": "Bad Request - Invalid input",
      "401": "Unauthorized - Missing/invalid auth",
      "403": "Forbidden - Insufficient permissions",
      "404": "Not Found - Resource doesn't exist",
      "422": "Unprocessable - Validation errors",
      "429": "Too Many Requests - Rate limit",
      "500": "Internal Server Error"
    },
    "errorCodes": {
      "auth": ["AUTH_INVALID_TOKEN", "AUTH_MISSING_TOKEN", "AUTH_INVALID_CREDENTIALS"],
      "validation": ["VALIDATION_FAILED", "VALIDATION_REQUIRED_FIELD", "VALIDATION_INVALID_FORMAT"],
      "resource": ["RESOURCE_NOT_FOUND", "RESOURCE_ALREADY_EXISTS", "RESOURCE_CONFLICT"],
      "business": ["BUSINESS_INSUFFICIENT_STOCK", "BUSINESS_INVALID_COUPON", "BUSINESS_PAYMENT_FAILED"],
      "system": ["SYSTEM_INTERNAL_ERROR", "SYSTEM_DATABASE_ERROR", "SYSTEM_EXTERNAL_API_ERROR"]
    }
  },

  "namingConventions": {
    "referenceFile": "naming.rules.md",
    "typescript": {
      "variables": "camelCase",
      "constants": "SCREAMING_SNAKE_CASE",
      "functions": "camelCase with verb prefix",
      "classes": "PascalCase",
      "interfaces": "PascalCase (no I prefix)",
      "types": "PascalCase",
      "enums": "PascalCase",
      "booleans": "Prefix with is, has, should, can",
      "arrays": "Plural nouns",
      "eventHandlers": "handle or on prefix"
    },
    "react": {
      "components": "PascalCase",
      "hooks": "camelCase with use prefix",
      "props": "camelCase",
      "files": "PascalCase for components, kebab-case for others"
    },
    "css": {
      "classes": "kebab-case",
      "ids": "kebab-case",
      "customProperties": "--kebab-case"
    },
    "database": {
      "tables": "snake_case (plural)",
      "columns": "snake_case",
      "foreignKeys": "{table}_id pattern",
      "indexes": "idx_{table}_{columns}",
      "constraints": "descriptive names with prefix"
    },
    "files": {
      "components": "PascalCase.tsx or kebab-case.tsx",
      "utilities": "kebab-case.ts",
      "tests": "*.test.tsx or *.spec.tsx",
      "styles": "*.module.css for CSS Modules"
    },
    "folders": {
      "format": "kebab-case",
      "collections": "Plural (components/, utils/)",
      "specific": "Singular (user/, product/)"
    },
    "api": {
      "endpoints": "kebab-case (plural)",
      "queryParams": "camelCase",
      "jsonKeys": "camelCase"
    },
    "git": {
      "branches": "type/kebab-case-description",
      "commits": "type(scope): description"
    }
  },

