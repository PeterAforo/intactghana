      "neutral": "gray-[50-900]",
      "darkMode": "dark-[700-950]",
      "rules": [
        "Always use design tokens, never hex codes directly",
        "Maximum 4 colors per component",
        "Ensure 4.5:1 contrast for text",
        "Use semantic colors for status (success/warning/error)"
      ]
    },
    "typography": {
      "fontFamilies": {
        "primary": "Inter",
        "headings": "Clash Display",
        "mono": "JetBrains Mono"
      },
      "scale": {
        "display": ["xl: 72px", "l: 60px", "m: 48px"],
        "heading": ["xl: 36px", "l: 30px", "m: 24px", "s: 20px", "xs: 18px"],
        "body": ["xl: 20px", "l: 18px", "m: 16px", "s: 14px", "xs: 12px"]
      },
      "rules": [
        "Use rem units for font sizes",
        "Line-height: 1.2 for headings, 1.5+ for body",
        "Max line length: 65-75 characters",
        "Letter-spacing: -0.02em for large headings"
      ]
    },
    "spacing": {
      "baseUnit": "4px",
      "scale": [0, 4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96, 128, 160, 192, 256],
      "rules": [
        "Always use spacing scale tokens",
        "Maintain 4px vertical rhythm",
        "Component internal: scale 1-6",
        "Between components: scale 6-12",
        "Sections: scale 16-32"
      ]
    },
    "components": {
      "referenceLocation": "packages/ui/src/components/",
      "mandatory": [
        "All components must have TypeScript types",
        "Include JSDoc comments for complex components",
        "Export named exports, not default",
        "Co-locate tests with components",
        "Follow atomic design methodology"
      ]
    }
  },

  "uiRules": {
    "referenceFile": "ui.rules.json",
    "components": {
      "buttons": {
        "variants": ["primary", "secondary", "outline", "ghost"],
        "sizes": ["xs", "sm", "md", "lg", "xl"],
